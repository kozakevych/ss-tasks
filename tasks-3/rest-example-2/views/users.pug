extends layout

block content
 
  table
    caption List of Users
    tr
      th Name
      th Surname
      th Email
      th Age
      th Delete
      //- th Edit
    each item in users
      tr(user-id=item.id onclick="deleteUser()")
        td= item.name
        td= item.surname
        td= item.email
        td= item.age
        td 
          button(type="button" user-id=item.id) Delete user
        td 
          //- form(action="http://127.0.0.1:3000/users" method="get") 
            input(type="submit" value="Edit" name="user"+item.id)

  div
    h4 Add new user
    span Name:
    input(type="text" name="name" id="new-user-name")
    span Surname:
    input(type="text" name="surname" id="new-user-surname")
    span Email:
    input(type="text" name="email" id="new-user-email")
    span Age:
    input(type="text" name="age" id="new-user-age")
    input(type="submit" value="Add" onclick="addUser()")
